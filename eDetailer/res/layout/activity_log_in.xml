	<ImageView 
        android:id="@+id/logo"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/login_logo"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="@dimen/margin_40"
    	android:scaleType="fitXY"/>
	
	<RelativeLayout
	    android:id="@+id/grey_background"
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_centerInParent="true"
    	android:layout_below="@+id/logo"
    	android:layout_marginTop="@dimen/margin_30"
    	android:layout_marginRight="350dp"
    	android:layout_marginLeft="350dp"
    	android:layout_marginBottom="150dp"
    	android:alpha="0.2"
    	android:background="@drawable/corner_views">
	</RelativeLayout>
	
	<TextView
		android:id="@+id/sign_in_lbl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/grey_background"
    	android:layout_marginTop="@dimen/margin_30"
		android:layout_centerHorizontal="true"
		android:text="Sign In"
	    android:textColor="@android:color/black"
		android:textSize="30sp" />
	
	<EditText
	    android:id="@+id/activity_login_email_address"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/grey_background"
	    android:layout_alignRight="@id/grey_background"
	    android:layout_below="@+id/sign_in_lbl"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="@dimen/margin_20"
	    android:layout_marginLeft="@dimen/margin_20"
	    android:layout_marginRight="@dimen/margin_20"
	    android:background="@drawable/edit_text_black"
	    android:drawableRight="@drawable/login_message"
	    android:drawablePadding="@dimen/margin_40"
	    android:textColorHint="@android:color/black"
	    android:textColor="@android:color/black"
	    android:textSize="30sp"
	    android:hint="Team Id"
	    android:ems="10"
	    android:inputType="textEmailAddress" >

	    <requestFocus />
	</EditText>
	<EditText
	    android:id="@+id/activity_login_password"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/grey_background"
	    android:layout_alignRight="@id/grey_background"
	    android:layout_below="@+id/activity_login_email_address"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="@dimen/margin_20"
	    android:layout_marginLeft="@dimen/margin_20"
	    android:layout_marginRight="@dimen/margin_20"
	    android:drawablePadding="@dimen/margin_40"
	    android:background="@drawable/edit_text_black"
	    android:drawableRight="@drawable/login_unlock"
	    android:textColorHint="@android:color/black"
	    android:textColor="@android:color/black"
	    android:textSize="30sp"
	    android:hint="Password"
	    android:ems="10"
        android:inputType="textPassword">
    </EditText>
    <Button
	    android:id="@+id/activity_login_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/grey_background"
	    android:layout_alignRight="@id/grey_background"
	    android:layout_below="@+id/activity_login_password"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="60dp"
	    android:layout_marginLeft="@dimen/margin_20"
	    android:layout_marginRight="@dimen/margin_20"
	    android:textColor="@android:color/white"
	    android:background="@drawable/corners_purple_login"
	    android:textSize="30sp"
	    android:padding="@dimen/margin_20"
	    android:text="Sign In" />

	<CheckBox
	    android:id="@+id/checkBox1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/grey_background"
	    android:layout_below="@+id/activity_login_button"
	    android:layout_centerHorizontal="true"
	    android:button="@drawable/login_checkbox"
	    android:layout_marginTop="@dimen/margin_50"
	    android:layout_marginLeft="@dimen/margin_20"
	    android:textColorHint="@android:color/black"
	    android:textColor="@android:color/black"
	    android:textSize="20sp"
	    android:visibility="gone"
		android:text="Keep me signed in" />

    <TextView
	    android:id="@+id/activity_login_forget_password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@id/grey_background"
	    android:layout_below="@+id/activity_login_button"
	    android:layout_centerHorizontal="true"
	    android:button="@drawable/login_checkbox"
	    android:layout_marginTop="@dimen/margin_50"
	    android:layout_marginRight="@dimen/margin_20"
	    android:textColorHint="@android:color/black"
	    android:textColor="@android:color/black"
	    android:textSize="20sp"
	    android:visibility="gone"
	    android:text="Forgot Password?" />

	    
</RelativeLayout>