<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/single_grid_layout"
    android:orientation="vertical">
    
	<RelativeLayout 
	    android:layout_width="320dp"
	    android:layout_height="250dp">
	    
	    <ImageView
	        android:id="@+id/image_button_single_grid"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/background_dialog"
	        android:scaleType="fitXY"/>

	        <TextView
	            android:id="@+id/textview_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:background="@drawable/header_thumbnail"
	            android:text="Presentation"
	            android:padding="@dimen/margin_20"
	            android:gravity="center"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textColor="@color/white" />

	        <ProgressBar
	            android:id="@+id/progress_bar_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" />

	        <LinearLayout 
			    android:id="@+id/bottom_layout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="@dimen/margin_10"
	            android:paddingLeft="@dimen/margin_30"
	            android:paddingRight="@dimen/margin_30"
	            android:orientation="horizontal"
	            android:visibility="gone">"
			    
			    <TextView 
			    	android:id="@+id/txtview_play"
	            	android:layout_width="match_parent"
	            	android:layout_height="wrap_content"
	            	android:textColor="@android:color/white"
	            	android:gravity="center"
	            	android:layout_weight="1"
	            	android:padding="@dimen/margin_10"
	            	android:layout_marginRight="@dimen/margin_10"
	            	android:text="Play"
	            	android:background="@drawable/frag_play_info_icon"/>
			    
			    <TextView 
			    	android:id="@+id/txtview_info"
	            	android:layout_width="match_parent"
	            	android:layout_height="wrap_content"
	            	android:textColor="@android:color/white"
	            	android:padding="@dimen/margin_10"
	            	android:gravity="center"
	            	android:layout_marginLeft="@dimen/margin_10"
	            	android:layout_weight="1"
	            	android:text="Info"
	            	android:background="@drawable/frag_play_info_icon"/>
			</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
